<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/home2"
        android:name="com.elhady.fav_movie.ui.fragments.Home"
        android:label="Home" >
        <action
            android:id="@+id/action_home2_to_movies"
            app:destination="@id/movies" />
        <action
            android:id="@+id/action_home2_to_movieDetails"
            app:destination="@id/movieDetails" />
    </fragment>
    <fragment
        android:id="@+id/favorite"
        android:name="com.elhady.fav_movie.ui.fragments.Favorite"
        android:label="Favorite" />
    <fragment
        android:id="@+id/searchMovies"
        android:name="com.elhady.fav_movie.ui.fragments.SearchMovies"
        android:label="SearchMovies" />
    <fragment
        android:id="@+id/movies"
        android:name="com.elhady.fav_movie.ui.fragments.Movies"
        android:label="Movies" >
        <argument
            android:name="movieCategory"
            app:argType="string"
            android:defaultValue="Popular" />
        <action
            android:id="@+id/action_movies_to_movieDetails"
            app:destination="@id/movieDetails" />
    </fragment>
    <fragment
        android:id="@+id/movieDetails"
        android:name="com.elhady.fav_movie.ui.fragments.MovieDetails"
        android:label="MovieDetails"
        app:exitAnim="@android:anim/slide_out_right">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>